[Unit]
Description=keyspider daemon (API)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=keyspider
Group=keyspider
WorkingDirectory=/opt/keyspider
ExecStart=/opt/keyspider/keyspiderd serve --config /etc/keyspider/keyspider.yaml
Restart=on-failure
RestartSec=2

# Hardening (tune as needed)
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/keyspider

[Install]
WantedBy=multi-user.target
